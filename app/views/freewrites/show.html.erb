<div class="index-container">
  <div class="index-bg">


<!-- Post Content -->
    <article>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">

            <div class="post-preview">

              <h2 class="post-title"><%= @freewrite.body %></h2>
              <p class="post-meta">Posted by
                <%= @freewrite.user.username %>
                <%= time_display(@freewrite.created_at) %>
              </p>
              <div class="prompt-buttons">
                <% if current_user == @freewrite.user %>
                  <%= link_to "View My Free Writing", freewrites_path, class: 'btn btn-primary my-2' %>
                  <%= link_to 'Edit Free Writing', edit_freewrite_path, class: 'btn btn-secondary my-2' %>
                  <%= link_to "Delete Free Writing", @freewrite, method: :delete, data: { confirm: "Are you sure? This can't be undone." }, class: 'btn btn-danger my-2' %>
                <% end %>
              </div>
            </div>

        </div>
      </div>
    </article>

  </div>
</div>
