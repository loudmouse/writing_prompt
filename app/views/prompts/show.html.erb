


<!-- Post Content -->
    <article>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">

            <h2 class="section-heading"><%= @random_word %></h2>

            <blockquote class="blockquote"><%= time_display(@prompt.created_at) %></blockquote>


            <p><%= @body %></p>

            <a href="#">
              <img class="img-fluid" src="/assets/calum-macaulay-60673-unsplash.jpg" alt="">
            </a>
            <span class="caption text-muted"><%= "Word Count: #{@word_count} words" %></span>

            <p>Random word provided by
              <a href="https://developer.oxforddictionaries.com/">Oxford Dictionaries API</a>.
            </p>
          </div>
          <%= link_to "View All Prompts", prompts_path, class: "btn" %>
        </div>
      </div>
    </article>

    <hr>
