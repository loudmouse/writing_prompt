<div class="index-container">
  <div class="index-bg">


<!-- Post Content -->
    <article>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">

            <div class="post-preview">
              <div class="prompt-word"><%= prompt.focus_word %></div>
              <h2 class="post-title"><%= body %></h2>
              <p class="post-meta">Posted by
                <%= prompt.user.username %>
                <%= time_display(prompt.created_at) %>
              </p>
              <span class="caption text-muted"><%= "Word Count: #{word_count} words" %></span>
              <div class="prompt-buttons">
                <% if current_user == this_user %>
                  <%= link_to "View My Prompts", prompts_path, class: 'btn btn-primary my-2' %>
                  <%= link_to 'Edit Prompt', edit_prompt_path, class: 'btn btn-secondary my-2' %>
                  <%= link_to "Delete Prompt", prompt, method: :delete, data: { confirm: "Are you sure? This can't be undone." }, class: 'btn btn-danger my-2' %>
                <% end %>
              </div>
            </div>

        </div>
      </div>
    </article>

  </div>
</div>
