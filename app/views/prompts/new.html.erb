<div class="prompt-container">
<div class="prompt-bg">

  <div class="container">

    <ul class="nav nav-tabs nav-fill flex-column flex-sm-row" id="myTab" role="tablist">
      <li class="nav-item flex-sm-fill">
        <a class="nav-link active" id="word-of-the-day" data-toggle="tab" href="#wod" role="tab" aria-controls="wod" aria-selected="true">Word of the Day</a>
      </li>
      <li class="nav-item flex-sm-fill">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#free" role="tab" aria-controls="free" aria-selected="false">Free Write</a>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="wod" role="tabpanel" aria-labelledby="word-of-the-day-tab">
        <%= render "shared/timer" %>

        <div class="word-info">

          <div class="the-word">
            <%= "#{@prompt.term}" %>
          </div>

          <div class="the-definition">
            <%= "#{@def}" %>
          </div>

          <div class="writing-tips">
            <p>
              <a class="toggle" href="#example">Object Writing Tips</a>
            </p>

            <div class="toggle-content" id="example">
              Write using your senses: sight, sound, taste, smell, touch
            </div>
          </div>

        </div>


        <%= form_for(@prompt) do |f| %>

          <%= f.hidden_field :word_id%>



        <div id="prompt-text-area" class="prompt-body">
          <%= f.text_area :body, autofocus: true, placeholder: "Start writing." %>
        </div>

        <div class="submit-prompt text-center">
          <%= f.submit "Save", class: 'btn btn-primary my-2 btn-block btn-submit' %>
        </div>


        <% end %>
      </div>
      <div class="tab-pane fade" id="free" role="tabpanel" aria-labelledby="free-tab">

        <%= render "shared/timer" %>

        <%= form_for(Prompt.new) do |f| %>

        <div id="prompt-text-area" class="prompt-body">
          <%= f.text_area :body, autofocus: true, placeholder: "Start writing." %>
        </div>

        <div class="submit-prompt text-center">
          <%= f.submit "Save", class: 'btn btn-primary my-2 btn-block btn-submit' %>
        </div>


        <% end %>
      </div>
    </div>




  </div>

</div>
</div>
