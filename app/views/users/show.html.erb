
<!-- Main Content -->
<div class="index-container">
  <div class="index-bg">

    <div class="container">

      <table class="table">
        <thead>
          <tr>
            <th scope="col">Words Written</th>
            <th scope="col">Prompts Written</th>
            <th scope="col">Average Words/Prompt</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= total_words_written_by_user %></td>
            <td><%= total_prompts_written_by_user %></td>
            <td><%= average_words_per_prompt_by_user %></td>
          </tr>
        </tbody>
      </table>




      <div class="col-lg-8 col-md-10 mx-auto">

        <div class="add-prompt-div text-center">
          <%= link_to "Add Prompt", new_prompt_path, class: "btn btn-primary btn-block" %>
        </div>

        <% prompts.each do |prompt| %>
        <div class="post-preview">
          <div class="title-link"><%= link_to prompt.word.word, prompt_path(prompt.id) %></div>
            <h2 class="post-title"><%= prompt.body %></h2>
            <!-- <h3 class="post-subtitle">
              Problems look mighty small from 150 miles up
            </h3> -->
          <p class="post-meta">Posted by
            <%= prompt.user.username %>
            <%= time_display(prompt.created_at) %></p>
        </div>
        <% end %>

        <!-- Pager -->
        <div class="clearfix">
          <!-- <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a> -->
        </div>
      </div>
    </div>

  </div>
</div>
